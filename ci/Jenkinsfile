pipeline {
    agent any

    stages {
        stage('Install K6') {
            steps {
                sh '''
                curl -LO https://github.com/grafana/k6/releases/download/v0.45.0/k6-v0.45.0-linux-amd64.tar.gz
                mkdir -p k6 && tar -xzf k6-v0.45.0-linux-amd64.tar.gz -C k6
                '''
            }
        }
        stage('Run Performance Tests') {
            steps {
                sh './k6/k6 run smoke-test.js'
            }
        }
    }
}
