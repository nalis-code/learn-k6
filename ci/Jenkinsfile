pipeline {
    agent {
        docker {
            image 'ubuntu:latest'  // or any other Linux-based Docker image
        }
    }

    stages {
        stage('install K6') {
            steps {
               sh(
                    '''
                    sudo dnf install -y https://dl.k6.io/rpm/repo.rpm
                    sudo dnf install -y k6
                    ''')
                }
        }
        stage('k6') {
            steps {
                sh 'k6 version'  // Assuming k6 is installed in the Docker image
            }
        }
    }
}
