pipeline {
    agent any

    stages {
        stage('Build and Functional Tests') {
            agent {
                docker {
                    image 'golang:1.23.0-alpine3.20'
                    args '-v ${PWD}:/workspace -w /workspace' // Mount and set working directory
                }
            }
            steps {
                script {
                    // Ensure Make is available (for Alpine-based images)
                    sh 'apk add --no-cache make'

                    // Build Go application
                    sh 'make deps'

                    // Run functional tests
                    sh 'make run-functional-tests'
                }
            }
        }

        stage('Performance Tests') {
            agent {
                docker {
                    image 'grafana/k6'
                    args '-v ${PWD}:/workspace -w /workspace --entrypoint=""' // Mount and set working directory
                }
            }
            steps {
                echo 'Running K6 performance tests...'
                sh 'make run-k6-smoke-tests'
            }
        }
    }
}
