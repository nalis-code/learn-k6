pipeline {
  agent any

  environment {
    GOPATH="${env.WORKSPACE}/go"
    GOBIN="${GOPATH}/bin" 
    PATH="/usr/local/go"
  }

   stages {
        stage('Prepare') {
            steps {
                sh 'make deps'

            }
        }
        stage('Functional Tests') {
            steps {
                sh 'make run-functional-tests'
            }
        }
        stage('Performance Tests') {
            steps {
                sh 'make run-k6-smoke-tests'       
            }                
        }
    }
}

