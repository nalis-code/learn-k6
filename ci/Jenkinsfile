pipeline {
    agent { dockerfile true }

    environment {
        GOCACHE = '/workspace/.cache/go-build'  // Set GOCACHE to a writable directory
    }

    stages {
        stage('Prepare') {
            steps {
                sh 'make deps'
            }
        }
        stage('Tests') {
            parallel {
                stage('Functional Tests') {
                    steps {
                        sh 'make run-functional-tests'
                    }
                }
                stage('Performance Tests') {
                    steps {
                        sh 'make run-k6-smoke-test'
                    }
                }
            }
        }
    }
}
