pipeline {
    agent any
    stages {
        stage('Install Go') {
            steps {
                script {
                    sh 'sudo make clean-go'
                    sh 'sudo make install-go'
                }
            }
        }
        stage('Verify Go Installation') {
            steps {
                script {
                    sh 'make verify-go'
                }
            }
        }
    }
}
