pipeline {
    agent {
        docker {
            image 'ubuntu:latest'  // or any other Linux-based Docker image
        }
    }

    stages {
        stage('build') {
            steps {
                sh 'uname -a'  // Check the Linux environment
                sh 'go version'  // Assuming Go is installed in the Docker image
            }
        }
        stage('k6') {
            steps {
                sh 'k6 version'  // Assuming k6 is installed in the Docker image
            }
        }
    }
}
