/* Requires the Docker Pipeline plugin */
pipeline {
     agent any

    stages {
        stage('build') {
            agent { 
                docker { 
                    image 'golang:1.23.0-alpine3.20' 
                    } 
                }
            agent {
                docker {
                    image 'grafana/k6'
                    args '--entrypoint=""'
                    reuseNode true
                }
            }
        }
        stage('Functional Tests') {
            steps {
                sh 'make run-functional-tests'
            }
        }
        stage('Performance Tests') {
            steps {
                echo 'Running K6 performance tests...'
                sh 'make run-k6-smoke-tests'       
            }                
        }
}
}
