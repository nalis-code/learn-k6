pipeline {

    agent { dockerfile true }

    stages {
        
        stage('install K6'){
            steps {
                    sh(
      '''
      sudo dnf install -y https://dl.k6.io/rpm/repo.rpm
      sudo dnf install -y k6
      ''')
            }
        }
        stage('performance Tests') {
            steps {
                    sh 'k6 run tests/smoke-test.js'
            }
        }
        
    }
}
